{
	"name": "mqtt-smart-home-demo",
	"version": "0.0.1",
	"description": "A comprehensive MQTT demo simulating smart home IoT devices with real-time dashboard",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "pnpm run build && node dist/index.js",
		"dev": "tsx watch src/index.ts",
		"dev:devices": "tsx watch src/devices/start-all.ts",
		"dev:control": "tsx watch src/control/start-control-center.ts",
		"dev:dashboard": "tsx watch src/dashboard/start-dashboard.ts",
		"start:broker": "docker-compose up -d",
		"stop:broker": "docker-compose down",
		"start:devices": "pnpm run build && node dist/devices/start-all.js",
		"start:control": "pnpm run build && node dist/control/start-control-center.js",
		"start:dashboard": "pnpm run build && node dist/dashboard/start-dashboard.js",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"type-check": "tsc --noEmit",
		"format": "pnpm exec biome format --write",
		"lint": "pnpm exec biome lint --write",
		"check": "pnpm exec biome check --write",
		"clean": "rm -rf dist",
		"demo:full": "concurrently \"pnpm run start:broker\" \"pnpm run dev\"",
		"demo:components": "concurrently \"pnpm run dev:devices\" \"pnpm run dev:control\" \"pnpm run dev:dashboard\""
	},
	"keywords": [
		"mqtt",
		"iot",
		"typescript",
		"smart-home",
		"demo",
		"simulation"
	],
	"author": "MQTT Demo Project",
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"mqtt": "^5.14.1",
		"pino": "^9.9.4",
		"pino-pretty": "^13.1.1",
		"socket.io": "^4.8.1",
		"uuid": "^9.0.1",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.23",
		"@types/node": "^20.19.13",
		"@types/uuid": "^9.0.8",
		"@types/ws": "^8.18.1",
		"@vitest/ui": "^1.6.1",
		"concurrently": "^8.2.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^1.6.1"
	}
}
